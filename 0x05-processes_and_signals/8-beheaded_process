#!/usr/bin/env bash
# Kill the 7-highlander process using SIGKILL
pid=$(pgrep -f "./7-highlander" | head -n 1)
if [ -z "$pid" ]; then
    echo "Error: No 7-highlander process found"
    exit 1
fi
kill -9 "$pid"
if ! pgrep -f "./7-highlander" > /dev/null; then
    echo "7-highlander process terminated"
else
    echo "Error: Failed to terminate 7-highlander process"
    exit 1
fi
